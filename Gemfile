# A sample Gemfile
source "http://rubygems.org"

gem 'rake'
gem 'rack', '1.3.5'
gem 'sinatra'
gem 'sinatra-contrib'
gem 'jim'
gem 'closure-compiler'
gem 'redis'
gem 'redis-namespace'
gem 'compass'
gem 'haml'
gem 'typhoeus'
gem 'yajl-ruby'
gem 'uuid'

group :test do
  gem 'minitest-display'
end

group :development do
  gem 'sinatra-reloader', :require => 'sinatra/reloader'
  gem 'thin'
  gem 'ruby-debug19'
end

group :production do
  gem 'unicorn'
end
